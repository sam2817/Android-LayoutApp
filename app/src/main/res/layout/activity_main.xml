<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.layoutdemo.layoutapp.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Home"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Table Layout"
        android:id="@+id/btnTable2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="loadTableLayoutActivity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Linear Layout (Vertical)"
        android:id="@+id/btnLinearVertical"
        android:layout_above="@+id/btnTable2"
        android:layout_centerHorizontal="true"
        android:onClick="loadLinearVerticalLayoutActivity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Linear Layout (Horizontal)"
        android:id="@+id/btnLinearHorizontal"
        android:layout_above="@+id/btnLinearVertical"
        android:layout_centerHorizontal="true"
        android:onClick="loadLinearHorizontalLayoutActivity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Frame Layout"
        android:id="@+id/btnFrame"
        android:layout_above="@+id/btnLinearHorizontal"
        android:layout_centerHorizontal="true"
        android:onClick="loadFrameLayoutActivity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Table Row Layout"
        android:id="@+id/btnTableRow"
        android:layout_below="@+id/btnTable2"
        android:layout_centerHorizontal="true"
        android:onClick="loadTableRowLayoutActivity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Grid Layout"
        android:id="@+id/btnGrid"
        android:layout_below="@+id/btnTableRow"
        android:layout_centerHorizontal="true"
        android:onClick="loadGridLayoutActivity" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Relative Layout"
        android:id="@+id/btnRelative"
        android:layout_below="@+id/btnGrid"
        android:layout_centerHorizontal="true"
        android:onClick="loadRelativeLayoutActivity"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Layouts"
        android:id="@+id/menuTitle"
        android:layout_above="@+id/btnFrame"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
